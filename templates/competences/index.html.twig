{% extends 'base.html.twig' %}

{% block title %}Compétences | Léa Barnezet{% endblock %}

{% block body_id %}body_competence{% endblock %}

{% block body %}
<section class="section-padding" style="padding-top: 120px; min-height: 100vh;">
    <div class="container">
        <h1 class="section-title" style="text-align: center; margin-bottom: 4rem; font-size: 2.5rem;">Toutes mes Compétences</h1>

        <!-- LANGUAGES -->
        <div class="skills-category">
            <h3>Languages Informatiques</h3>
            <div class="skills-grid-circles">
                <div class="skill-card" style="--skill-color: #e34c26;">
                    <span class="skill-name">HTML</span>
                </div>
                <div class="skill-card" style="--skill-color: #264de4;">
                    <span class="skill-name">CSS</span>
                </div>
                <div class="skill-card" style="--skill-color: #f0db4f;">
                    <span class="skill-name">JS</span>
                </div>
                <div class="skill-card" style="--skill-color: #777bb4;">
                    <span class="skill-name">PHP</span>
                </div>
                <div class="skill-card" style="--skill-color: #f89820;">
                    <span class="skill-name">Java</span>
                </div>
                <div class="skill-card" style="--skill-color: #00599c;">
                    <span class="skill-name">C++</span>
                </div>
                <div class="skill-card" style="--skill-color: #003b57;">
                    <span class="skill-name">SQL</span>
                </div>
                <div class="skill-card" style="--skill-color: #4db33d;">
                    <span class="skill-name">MongoDB</span>
                </div>
                <div class="skill-card" style="--skill-color: #000000; --glow-color: rgba(255,255,255,0.2);">
                    <span class="skill-name" style="color: #fff;">Cypher</span>
                </div>
            </div>
        </div>

        <!-- FRAMEWORKS -->
        <div class="skills-category">
            <h3>Frameworks</h3>
            <div class="skills-grid-circles">
                <div class="skill-card" style="--skill-color: #d33c43;">
                    <span class="skill-name">CakePHP</span>
                </div>
                <div class="skill-card" style="--skill-color: #02569b;">
                    <span class="skill-name">Flutter</span>
                </div>
                <div class="skill-card" style="--skill-color: #6cc24a;">
                    <span class="skill-name">Node.js</span>
                </div>
                <div class="skill-card" style="--skill-color: #000000; --glow-color: rgba(255,255,255,0.2);">
                    <span class="skill-name" style="color: #fff;">Symfony</span>
                </div>
            </div>
        </div>

        <!-- OUTILS / OS -->
        <div class="skills-category">
            <h3>Outils & Systèmes</h3>
            <div class="skills-grid-circles">
                <div class="skill-card" style="--skill-color: #eb3c00;">
                    <span class="skill-name">Office</span>
                </div>
                <div class="skill-card" style="--skill-color: #0078d7;">
                    <span class="skill-name">Windows</span>
                </div>
                 <div class="skill-card" style="--skill-color: #fcc624;">
                    <span class="skill-name">Linux</span>
                </div>
            </div>
        </div>

    </div>
</section>
{% endblock %}
