{% extends 'base.html.twig' %}

{% block body %}
    <!-- HERO SECTION -->
    <section id="hero-section">
        <div class="container">
            <div class="hero-content">
                <p class="hero-subtitle">Bonjour, je suis Léa Barnezet</p>
                <h1>Développeuse <span style="color: var(--accent);">Full Stack</span></h1>
                <p class="hero-description" style="max-width: 600px; margin: 0 auto 2rem; color: var(--text-muted);">
                    Je conçois des applications web robustes et modernes. Actuellement à la recherche d’un CDI à Bourg-en-Bresse, Lyon ou dans ses alentours
                </p>
                <div class="hero-actions">
                    <a href="#projets" class="btn btn-primary">Voir mes projets</a>
                    <a href="{{ asset('cv_FR.pdf') }}" target="_blank" class="btn btn-outline">Télécharger mon CV</a>
                </div>
            </div>
        </div>
    </section>

    <!-- SKILLS SECTION -->
    <section id="competences" class="section-padding">
        <div class="container">
            <h2 class="section-title" style="text-align: center; margin-bottom: 3rem;">Mes Compétences</h2>

            <div class="skills-category">
                <h3>Languages Informatiques</h3>
                <div class="skills-grid-circles">
                    <div class="skill-card" style="--skill-color: #e34c26;">
                        <span class="skill-name">HTML</span>
                    </div>
                    <div class="skill-card" style="--skill-color: #264de4;">
                        <span class="skill-name">CSS</span>
                    </div>
                     <div class="skill-card" style="--skill-color: #f0db4f;">
                        <span class="skill-name">JS</span>
                    </div>
                     <div class="skill-card" style="--skill-color: #777bb4;">
                        <span class="skill-name">PHP</span>
                    </div>
                </div>
            </div>

            <div class="skills-category">
                <h3>Frameworks</h3>
                <div class="skills-grid-circles">
                     <div class="skill-card" style="--skill-color: #000000">
                        <span class="skill-name">Symfony</span>
                    </div>
                    <div class="skill-card" style="--skill-color: #6cc24a;">
                        <span class="skill-name">Node.js</span>
                    </div>
                     <div class="skill-card" style="--skill-color: #02569b;">
                        <span class="skill-name">Flutter</span>
                    </div>
                </div>
            </div>

             <div class="skills-category">
                <h3>Outils & Système</h3>
                <div class="skills-grid-circles">
                     <div class="skill-card" style="--skill-color: #fcc624;">
                        <span class="skill-name">Linux</span>
                    </div>
                    <div class="skill-card" style="--skill-color: #003b57;">
                        <span class="skill-name">SQL</span>
                    </div>
                </div>
            </div>

            <div style="text-align: center; margin-top: 3rem;">
                <a href="{{ path('app_competences') }}" class="btn btn-outline">Voir toutes mes compétences &rarr;</a>
            </div>

        </div>
    </section>

    <!-- PROJECTS SECTION -->
    <section id="projets" class="section-padding" style="background-color: var(--bg-alt);">
        <div class="container">
            <h2 class="section-title" style="text-align: center; margin-bottom: 3rem;">Projets Récents</h2>

            <div class="projects-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 2rem;">
                {% for project in projects %}
                    <article class="project-card" style="background: var(--bg-body); border-radius: 12px; overflow: hidden; border: 1px solid var(--border-color); transition: transform 0.3s ease;">
                        <div class="project-image" style="height: 200px; background-color: #2d2d2d; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                            {% if project.image %}
                                <img src="{{ project.image }}" alt="{{ project.title }}" style="width: 100%; height: 100%; object-fit: cover;">
                            {% else %}
                                <span style="color: var(--text-muted);">{{ project.title }}</span>
                            {% endif %}
                        </div>
                        <div class="project-content" style="padding: 1.5rem;">
                             <div class="project-tags" style="display: flex; gap: 0.5rem; margin-bottom: 1rem; flex-wrap: wrap;">
                                {% if project.technologies %}
                                    {% for tech in project.technologies|split(',') %}
                                        <span style="font-size: 0.8rem; padding: 0.2rem 0.6rem; background: rgba(168, 85, 247, 0.1); color: var(--accent); border-radius: 4px;">{{ tech|trim }}</span>
                                    {% endfor %}
                                {% endif %}
                            </div>
                            <h3 style="margin-bottom: 0.5rem;">{{ project.title }}</h3>
                            <p style="color: var(--text-muted); font-size: 0.9rem; margin-bottom: 1.5rem;">
                                {{ project.description|striptags|slice(0, 100) ~ '...' }}
                            </p>
                        </div>
                    </article>
                {% else %}
                     <p style="color: var(--text-muted); text-align: center; grid-column: 1 / -1;">Aucun projet récent trouvé.</p>
                {% endfor %}
            </div>

            <div style="text-align: center; margin-top: 3rem;">
                <a href="{{ path('app_project') }}" class="btn btn-outline">Voir tous les projets &rarr;</a>
            </div>
        </div>
    </section>

    <!-- CONTACT / FOOTER CALLOUT -->
    <section id="contact" class="section-padding" style="text-align: center;">
        <div class="container">
            <h2 style="margin-bottom: 1rem;">Prêt à collaborer ?</h2>
            <p style="color: var(--text-muted); margin-bottom: 2rem;">Je suis disponible pour discuter de vos projets ou d'opportunités de carrière.</p>
            <a href="mailto:Barnezet905@gmail.com" class="btn btn-primary">Me Contacter</a>
        </div>
    </section>
{% endblock %}
