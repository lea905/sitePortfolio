{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <section class="section-padding" style="padding-top: 120px; min-height: 100vh;">
        <div class="container">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
                <h1 style="margin: 0; font-size: 2rem;">Gestion des Projets</h1>
                <a href="{{ path('app_admin_project_new') }}" class="btn btn-primary">
                    + Nouveau Projet
                </a>
            </div>

            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width: 80px;">ID</th>
                            <th>Titre</th>
                            <th>Description</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for project in projects %}
                        <tr>
                            <td><span class="badge-id">#{{ project.id }}</span></td>
                            <td>
                                <div style="font-weight: 600;">{{ project.title }}</div>
                                {% if project.link %}
                                    <a href="{{ project.link }}" target="_blank" style="font-size: 0.8rem; color: var(--text-muted); text-decoration: underline;">Voir le lien</a>
                                {% endif %}
                            </td>
                            <td>
                                <div style="max-width: 400px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; color: var(--text-muted);">
                                    {{ project.description }}
                                </div>
                            </td>
                            <td>
                                <div style="display: flex; gap: 0.5rem;">
                                    <a href="{{ path('app_admin_project_show', {'id': project.id}) }}" class="action-btn" title="Voir">
                                        üëÅÔ∏è
                                    </a>
                                    <a href="{{ path('app_admin_project_edit', {'id': project.id}) }}" class="action-btn" title="Modifier">
                                        ‚úèÔ∏è
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 3rem; color: var(--text-muted);">
                                Aucun projet trouv√©. Commencez par en cr√©er un !
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
