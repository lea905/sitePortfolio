{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <section class="min-vh-100 d-flex align-items-center justify-content-center" style="padding-top: 120px; padding-bottom: 3rem; display: flex; justify-content: center;">
        <div class="glass-card" style="width: 100%; max-width: 800px; padding: 0; overflow: hidden;">
            
            {% if project.image %}
                <div style="height: 300px; background-color: #1a1f35; position: relative; overflow: hidden;">
                    <img src="{{ project.image }}" alt="{{ project.title }}" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
            {% endif %}

            <div style="padding: 2.5rem;">
                <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 1.5rem;">
                    <div>
                        <h1 style="margin: 0; font-size: 2rem;">{{ project.title }}</h1>
                        <span class="badge-id" style="margin-top: 0.5rem;">#{{ project.id }}</span>
                    </div>
                    {% if project.link %}
                        <a href="{{ project.link }}" target="_blank" class="btn btn-outline" style="padding: 0.5rem 1rem; font-size: 0.9rem;">
                            Voir le site &rarr;
                        </a>
                    {% endif %}
                </div>

                <div style="margin-bottom: 2rem;">
                    <h3 style="font-size: 1.1rem; color: var(--text-muted); margin-bottom: 0.5rem;">Technologies</h3>
                    {% if project.technologies %}
                        {% for tech in project.technologies|split(',') %}
                            <span class="tech-badge">{{ tech|trim }}</span>
                        {% endfor %}
                    {% else %}
                        <span style="color: var(--text-muted); font-style: italic;">Aucune technologie spécifiée</span>
                    {% endif %}
                </div>

                <div style="margin-bottom: 2rem;">
                    <h3 style="font-size: 1.1rem; color: var(--text-muted); margin-bottom: 0.5rem;">Description</h3>
                    <p style="color: var(--text-main); white-space: pre-line;">{{ project.description }}</p>
                </div>

                {% if project.image is empty %}
                    <div style="margin-bottom: 2rem;">
                        <h3 style="font-size: 1.1rem; color: var(--text-muted); margin-bottom: 0.5rem;">Image URL</h3>
                        <code style="background: rgba(0,0,0,0.3); padding: 0.2rem 0.5rem; border-radius: 4px; color: #fca5a5;">Non définie</code>
                    </div>
                {% endif %}

                <div style="border-top: 1px solid var(--border-color); padding-top: 2rem; display: flex; justify-content: space-between; align-items: center;">
                    <a href="{{ path('app_admin_project_index') }}" style="color: var(--text-muted); text-decoration: underline;">
                        &larr; Retour à la liste
                    </a>
                    
                    <div style="display: flex; gap: 1rem; align-items: center;">
                        <a href="{{ path('app_admin_project_edit', {'id': project.id}) }}" class="btn btn-primary">
                            Modifier
                        </a>
                        {{ include('admin_project/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
