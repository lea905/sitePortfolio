{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
    <section class="min-vh-100 d-flex align-items-center justify-content-center" style="padding-top: 120px; padding-bottom: 3rem; display: flex; justify-content: center;">
        <div class="glass-card" style="width: 100%; max-width: 600px; padding: 2.5rem;">
            <h1 style="text-align: center; margin-bottom: 2rem;">Modifier le Projet</h1>

            {{ include('admin_project/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

            <div style="margin-top: 2rem; border-top: 1px solid var(--border-color); padding-top: 1.5rem; text-align: center;">
                 {{ include('admin_project/_delete_form.html.twig') }}
            </div>

            <div style="text-align: center; margin-top: 1.5rem;">
                <a href="{{ path('app_admin_project_index') }}" style="color: var(--text-muted); text-decoration: underline;">Retour à la liste</a>
            </div>
        </div>
    </section>
{% endblock %}
